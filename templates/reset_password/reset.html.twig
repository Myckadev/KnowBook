                    {{ form_row(resetForm.plainPassword.first, {attr: {class: 'form-control input100', placeholder: 'Nouveau mot de passe'}, label: ' '}) }}
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    {{ form_row(resetForm.plainPassword.second, {attr: {class: 'form-control input100', placeholder: 'RÃ©petez le nouveau mot de passe'}, label: ' '}) }}
