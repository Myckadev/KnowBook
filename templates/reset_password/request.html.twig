{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Changement de mot de passe{% endblock %}

{% block body %}

    {{ form_start(requestForm) }}
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form validate-form" method="post"><span class="login100-form-title">Demande de changement de mot de passe</span>
                <div class="wrap-input100 validate-input">
                    {{ form_row(requestForm.email, {attr: {class: 'form-control input100', placeholder: 'Email'}, label: ' '}) }}
                    <span class="focus-input100"></span>
                    <small>
                        *Entrer votre adresse email et nous vous enverrons un lien pour changer votre mot de passe
                    </small>
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Valider
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('logasset/login.css') }}">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
{% endblock %}
