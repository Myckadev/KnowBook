{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} S'enregistrer{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form validate-form" method="post"><span class="login100-form-title">S'inscrire</span>
                <div class="wrap-input100 validate-input">
                    {{ form_row(registrationForm.username, {attr: {class: 'form-control input100', placeholder: 'Nom d\'utilisateur'}}) }}
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    {{ form_row(registrationForm.email, {attr: {class: 'form-control input100', placeholder: 'Email'}}) }}
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    {{ form_row(registrationForm.plainPassword.first, {attr: {class: 'form-control input100'}}) }}
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    {{ form_row(registrationForm.plainPassword.second, {attr: {class: 'form-control input100'}}) }}
                    <span class="focus-input100"></span>
                </div>

                    {{ form_row(registrationForm.agreeTerms, {label: 'Conditions d\'utilisations '} ) }}

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        S'enregistrer
                    </button>
                </div>

                <div style="margin-top: 30px">
                    <a class="txt2" href="{{ path('AppLogin') }}">
                        Déjà inscrit ?
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('logasset/login.css') }}">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
{% endblock %}