{% extends 'base.html.twig' %}

{% block title %}{{ parent()  }} Connexion{% endblock %}

{% block body %}
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" method="post"><span class="login100-form-title">Connexion</span>
                <div class="wrap-input100 validate-input">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input100" autocomplete="email"  placeholder="Email" required>
                    <span class="focus-input100"></span>

                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input type="password" name="password" id="inputPassword" class="form-control input100" autocomplete="current-password" placeholder="Mot de passe" required>
                    <span class="focus-input100"></span>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit" >
                        Connexion
                    </button>
                </div>
                <div style="margin-top: 10px">
                    <span class="txt1">Oublie </span>
                    <a class="txt2" href="{{ path('app_forgot_password_request') }}">
                        Mot de passe ?
                    </a>
                </div>
                <div style="margin-top: 30px">
                    <a class="txt2" href="{{ path('AppRegister') }}">
                        Pas encore inscrit ?
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('logasset/login.css') }}">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
{% endblock %}
