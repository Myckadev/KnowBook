{% extends 'baseAdmin.html.twig' %}

{% block title %}
{{ parent() }} Liste des utilisateurs
{% endblock %}

{% block body %}
    <h1 style="margin-top: 50px">Liste des utilisateurs</h1>
    {% if listUser is not empty %}
        {% for user in listUser %}
            <div style="width: 80%; margin: 0 auto">
                <div style="background: #fff;border-radius: 10px; overflow: hidden; margin-top: 20px">
                    <div style="width: 80%; margin: 0 auto;">
                        <h1 style="font-size: 15px; color: grey">Information sur l'utilsateur</h1>
                        <div class="wrap-input100 validate-input" style="margin-bottom: 15px;">
                            <div style="; display: flex; justify-content: space-between; font-size: 15px; line-height: 1.5; color: #666666;
    background: #e6e6e6; height: 50px; border-radius: 25px; padding: 15px 30px 0 68px">
                                <span>{{ user.email }} </span><span>{{ user.roles |join(', ') }} {{ user.username }}</span>

                            </div>
                            <div style="display: flex; justify-content: space-between; margin-top: 20px">
                                <a href="{{ path('AppAdminBanUser', {'id': user.id}) }}"><button>Bannir</button></a>
                            </div>
                            <div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <h1 style="margin-top: 50px; font-size: 20px">Vous n'avez pas d'avis</h1>
    {% endif %}
{% endblock %}


