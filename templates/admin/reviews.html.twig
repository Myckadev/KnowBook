{% extends 'baseAdmin.html.twig' %}

{% block title %}
{{ parent() }} Liste avis
{% endblock %}

{% block body %}
    <h1 style="margin-top: 50px">Liste des avis</h1>
    {% if listReview is not empty %}
        {% for review in listReview %}
            <div style="width: 80%; margin: 0 auto">
                <div style="background: #fff;border-radius: 10px; overflow: hidden; margin-top: 20px">
                    <div style="width: 80%; margin: 0 auto;">
                        <h1 style="font-size: 15px; color: grey">Titre du poste où vous avez rédigez cet avis</h1>
                        <h1>{{ review.blogWeb.title }}</h1>

                        <div class="wrap-input100 validate-input" style="margin-bottom: 15px;">
                            <div style="; display: flex; justify-content: space-between; font-size: 15px; line-height: 1.5; color: #666666;
    background: #e6e6e6; height: 50px; border-radius: 25px; padding: 15px 30px 0 68px">
                                <span>{{ review.content }} </span><span>{{ review.date.format("d/m/Y - ") }} {{ review.author.username }}</span>

                            </div>
                            <div style="display: flex; justify-content: space-between; margin-top: 20px">
                                <a href="{{ path('AppAdminDelReview', {'id': review.id}) }}"><button>Supprimer</button></a>
                                <a href="{{ path('AppViewBlog', {'id': review.blogWeb.id}) }}"><button>Voir le blog</button></a>
                            </div>
                            <div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <h1 style="margin-top: 50px; font-size: 20px">Vous n'avez pas d'avis</h1>
    {% endif %}
{% endblock %}



